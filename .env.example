# Environment variable example
# Copy to .env file and enter values when actually using

# ========================================
# 1. Infrastructure & Environment
# ========================================

# SECURITY: DEBUG mode should ALWAYS be false in production
DEBUG=false

# Port to run the application on
PORT=5555

# Base URL for the application (useful when running behind reverse proxy)
BASE_URL=/drop5/

# SECURITY: Trusted proxies for IP detection (comma-separated list of IPs or CIDR networks)
# If empty, the server won't trust XFF and will use direct connection IP.
# TRUSTED_PROXIES=127.0.0.1,10.0.0.0/24

# ========================================
# 2. Core Sharing Policies
# ========================================

# File timeout in seconds (files older than this will be automatically deleted)
# 5 minutes = 300 seconds
FILE_TIMEOUT=300

# Maximum individual file size in bytes (30MB = 31457280 bytes)
MAX_FILE_SIZE=31457280

# Maximum total storage size per session/folder in bytes (100MB = 104857600 bytes)
MAX_STORAGE_SIZE=104857600

# File count limits per session
MAX_FILES_NORMAL=30
MAX_FILES_RESTRICTED=5

# Brute force detection settings (Unique codes)
BRUTE_FORCE_LIMIT=10
BRUTE_FORCE_WINDOW=60
BRUTE_FORCE_BLOCK_DURATION=3600

# Global Rate Limiting (DDoS prevention)
GLOBAL_REQUEST_LIMIT=50
GLOBAL_REQUEST_WINDOW=60
SYSTEM_REQUEST_LIMIT=300
SYSTEM_SESSION_LIMIT=30
SYSTEM_WINDOW=60

# Expensive Action Limiting (Upload prevention)
UPLOAD_REQUEST_LIMIT=5
UPLOAD_REQUEST_WINDOW=60
SYSTEM_UPLOAD_LIMIT=50
DUPLICATE_HASH_LIMIT=10

# Behavioral Rules
# Minimum seconds a client must be 'seen' before allowed to upload
MIN_UPLOAD_DELAY=1.5

# ========================================
# 3. Storage & Region Policies
# ========================================

# Directory paths
UPLOAD_DIR=files
AUDIT_DIR=audit

# List of country codes (ISO alpha-2) to operate in restricted mode
# Example: RU,CN,VN
RESTRICTED_COUNTRIES=

# Blocked file extensions (comma-separated, without leading dot)
BLOCKED_FILE_EXTENSIONS=exe,bat,cmd,com,pif,scr,vbs,msi,jar,app

# ========================================
# 4. External Integrations - Optional
# ========================================

# Discord Webhook for error reporting and status updates
# REPORTER_DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# Umami Analytics Configuration
# UMAMI_ID=
# UMAMI_URL=https://cloud.umami.is

# ========================================
# 5. Branding & Contact Information
# ========================================

# Contact email for the footer (leave empty to hide)
CONTACT_EMAIL=contact@drop5.net

# Company/Project name for the footer and branding (leave empty to hide)
COMPANY_NAME=Drop5